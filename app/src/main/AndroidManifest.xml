            android:name=".activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ComprasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FavoritosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CuponesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PagoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.EnvioActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.CompraActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ProfileActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>